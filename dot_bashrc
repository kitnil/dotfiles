herd()
{
    case "$1" in
        start)
            command herd enable "${@:2}"
            command herd start "${@:2}"
            ;;
        *)
            command herd "$@"
            ;;
    esac
}

sudo()
{
    case "$1" in
        herd)
            case "$2" in
                start)
                    command sudo herd enable "${@:3}"
                    command sudo herd start "${@:3}"
                    ;;
                *)
                    command sudo herd "${@:2}"
                    ;;
            esac
            ;;
        *)
            command sudo "$@"
            ;;
    esac
}
