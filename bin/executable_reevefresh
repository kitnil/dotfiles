#!/usr/bin/env ansible-playbook
---
- hosts: oracle
  tasks:
    - name: stop and remove container
      shell: docker rm -f reevefresh
      ignore_errors: yes

    - name: run container
      shell: docker run --restart=unless-stopped --name reevefresh --detach --network=host --env SLACK_API_KEY="{{ lookup('passwordstore', 'slack.com/home-s2x8742.slack.com/tokens/bot')}}" --env TWITCH_API_KEY="{{ lookup('passwordstore', 'twitch.com/api/wi-twitch')}}" localhost:5000/reevefresh:latest --users arhont_tv,tonehack,tsoding,rwxrob,tragedy138,christitustech,awkravchuk,nekrovim
