#!/usr/bin/env bash

setup()
{
    file="/run/opengl-driver"
    if [[ -h "$file" ]]
    then
        echo "File $file already exists."
    else
        sudo ln -s "$(command nix-build "$HOME/.nix-defexpr/channels/nixos-unstable" --no-out-link -A vaapiIntel)" "$file"
    fi
}

setup

nixGLIntel exec -a "$0" obs "$@"
