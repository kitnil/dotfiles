#!/bin/sh

(
    for dir in .; do
        cd ~/.password-store/$dir || exit
        for password in $(find . -not -path './.gpg-id' -not -path './.gitattributes' -not -path './.git/*' -type f | sed 's@\./@@' | sed 's@\.gpg@@'); do
            # echo "$password"
            pass show "$password" | head -n1 | tr -d '\n'
            echo
        done
    done
)
