#!/usr/bin/env bash

set -e
set -o pipefail

case "$1" in
    clean)
        backup forget --keep-last 10 --prune
        ;;
    *)
        sudo --login                                                        \
             RESTIC_PASSWORD="$(pass show wugi.info/restic/all)"            \
             RESTIC_REPOSITORY="${RESTIC_REPOSITORY:-/srv/backup/guixsd}"   \
             "$HOME/.guix-profile/bin/restic" "$@"
        ;;
esac
