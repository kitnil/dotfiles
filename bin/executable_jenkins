#!/usr/bin/env bash

set -e

JENKINS_URL="${JENKINS_URL:-https://jenkins.wugi.info}"

help_main()
{
    echo "\
Usage: connect COMMANDS ARGS...
Run COMMANDS with ARGS

COMMAND must be one of the sub-commands listed below:

   build
   stop

Report bugs to: go.wigust@gmail.com."
}

case "$1" in
    --help | -h)
        help_main
        exit 0
        ;;
    build)
        curl --request POST --user "admin:$(pass show jenkins.wugi.info/token-admin)" "$JENKINS_URL/job/$2/job/$3/build"
        ;;
    stop)
        data="$(cat << 'EOF'
// https://jenkins.intr/script

import java.util.ArrayList
import hudson.model.*;
import jenkins.model.Jenkins

// Remove everything which is currently queued
def q = Jenkins.instance.queue
for (queued in Jenkins.instance.queue.items) {
    q.cancel(queued.task)
}

// stop all the currently running jobs
for (job in Jenkins.instance.items) {
    stopJobs(job)
}

def stopJobs(job) {
    if (job in com.cloudbees.hudson.plugins.folder.Folder) {
        for (child in job.items) {
            stopJobs(child)
        }
    } else if (job in org.jenkinsci.plugins.workflow.multibranch.WorkflowMultiBranchProject) {
        for (child in job.items) {
            stopJobs(child)
        }
    } else if (job in org.jenkinsci.plugins.workflow.job.WorkflowJob) {

        if (job.isBuilding()) {
            for (build in job.builds) {
                build.doKill()
            }
        }
    }
}
EOF
)"
        curl --user "admin:$(pass show jenkins.wugi.info/token-admin)" "$JENKINS_URL/scriptText" --data-urlencode "script=$data"
        ;;
    *)
        help_main
        exit 0
        ;;
esac

