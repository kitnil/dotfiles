#!/usr/bin/env bash

case "$1" in
    street)
        mpv --no-resume-playback http://192.168.100.4/mjpg/video.mjpg
        ;;
    home)
        CAMERA_USER="${CAMERA_USER:-gitarik}"
        CAMERA_PASSWORD="${CAMERA_PASSWORD:-$(pass show wugi.info/camera/192.168.100.3/gitarik)}"
        CAMERA_HOST="${CAMERA_HOST:-192.168.100.3}"
        CAMERA_URL="http://$CAMERA_USER:$CAMERA_PASSWORD@$CAMERA_HOST/nphMotionJpeg?Resolution=640x480&Quality=Standard"
        mpv --no-resume-playback "$CAMERA_URL" "${@:2}"
esac
