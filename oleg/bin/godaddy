#!/bin/sh

set -e -x

passwords=$(pass show godaddy.com/api/lexicon)
key=$(echo "$passwords" | recsel --print-values=key)
secret=$(echo "$passwords" | recsel --print-values=secret)

if [ -z "$RECORD" ]; then
    record="A"
else
    record="$RECORD"
fi

docker run --rm -it analogj/lexicon /usr/local/bin/lexicon godaddy list --auth-key "$key" --auth-secret "$secret" wugi.info "$record" "$@"
