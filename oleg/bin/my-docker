            --publish 50000:50000 \
            jenkins/jenkins:lts
}

registry()
{
    docker run \
            --name registry \
            --hostname registry \
            --detach \
            --restart unless-stopped \
            --publish 5000:5000 \
            --volume /var/lib/docker-registry:/var/lib/registry \
