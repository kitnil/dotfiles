#!/bin/sh

if [ -z $@ ]
then
    awk '/mysql:/{ print $1 }' "$HOME/.myclirc"
else
    if [ "$(echo '(current-frame-smallp)' | stumpish -e eval )" == "0" ]; then
        size=10
    else
        size=8
    fi
    coproc (xterm -title "mycli@$@" -bg '#fff0f5' -fg '#000000' -fa Monospace -fs "$size" -e env PAGER='less -S' mycli -d $@ &>/dev/null &)
fi
