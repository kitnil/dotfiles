#!/bin/sh

ip tuntap add tap0 mode tap

ip address del 192.168.105.120/24 dev enp6s0

# Could break office network if tap0 is openvpn connection:
brctl addbr br0
brctl addif br0 tap0
brctl addif br0 enp6s0

ip link set br0 up
ip address add 192.168.105.120/24 dev br0
ip route add default via 192.168.105.1

ip link set tap0 up

# https://bugzilla.redhat.com/show_bug.cgi?id=542405
sysctl net.bridge.bridge-nf-call-iptables=0
