#!/usr/bin/env bash

case "$1" in
    increase)
        command curl -d '{"value": 5}' -XPOST 127.0.0.1:8080/increase
        ;;
    decrease)
        command curl -d '{"value": 5}' -XPOST 127.0.0.1:8080/decrease
        ;;
    toggle)
        command curl -XPOST 127.0.0.1:8080/toggle
        ;;
    *)
        command curl -d "{\"value\": $1}" -XPOST 127.0.0.1:8080/set
esac
