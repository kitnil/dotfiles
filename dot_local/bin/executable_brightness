#!/usr/bin/env bash

case "$1" in
    increase)
        sudo ddcutil setvcp 10 $(("$(sudo ddcutil getvcp --brief 10 | awk '{ print $4 }')" + "$2"))
        ;;
    decrease)
        sudo ddcutil setvcp 10 $(("$(sudo ddcutil getvcp --brief 10 | awk '{ print $4 }')" - "$2"))
        ;;
    *)
        sudo ddcutil setvcp 10 "${@:1}"
esac
