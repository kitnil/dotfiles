then
    PATH="$PATH":"$HOME"/.nix-profile/lib/openjdk/bin
fi

PATH="${HOME}/perl5/bin${PATH:+:${PATH}}"

PATH="$(source /etc/profile; printf "$PATH")":"${HOME}/bin":"${HOME}/.local/bin":"${HOME}/go/bin":"${HOME}/.npm-global/bin":/opt/gradle/bin:"$PATH"

