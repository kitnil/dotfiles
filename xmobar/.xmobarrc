Config { font = "xft:Monospace:pixelsize=16:antialias=true:hinting=true"
       , additionalFonts = [ "xft:FontAwesome:pixelsize=16:antialias=true:hinting=true" ]
       , borderColor = "#DCDAD5"
       , border = TopB
       , bgColor = "#DCDAD5"
       , fgColor = "#000000"
       , alpha = 0
       , position = Bottom
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = False
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Network "enp6s0" ["-L","0","-H","32", "-S", "True",
                                            "--normal","#228B22","--high","#FF0000",
                                            "--template","<dev>: <rx> <tx>"] 10
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","#228B22","--high","#FF0000"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%A %B %_d %Y %H:%M" "date" 10
                    , Run Kbd [ ("en" , "en")
                              , ("ru" , "<fc=#FF0000>ru</fc>")
                              ]
                    , Run DiskU [("/", "<used>/<size>"), ("sdb1", "<used>/<size>")]
                      ["-L", "20", "-H", "50", "-m", "1", "-p", "3"] 20
                    , Run DiskIO [("/", "<read>/<write>"), ("sdb1", "<read>/<write>")] [] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %kbd%  %cpu%  %memory%  %disku%  %diskio%  %enp6s0% }\
                    \{ %uname%  %date% "
       }
