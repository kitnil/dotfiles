       , borderColor = "black"
Config { font = "xft:Monospace:pixelsize=16:antialias=true:hinting=true"
       , additionalFonts = [ "xft:FontAwesome:pixelsize=16:antialias=true:hinting=true" ]
       , border = TopB
       , bgColor = "black"
       , fgColor = "grey"
       , alpha = 255
       , position = Bottom
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Network "enp6s0" ["-L","0","-H","32",
                                            "--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%a %b %_d %Y %H:%M" "date" 10
                    , Run Kbd [ ("en" , "<fc=#00008B>en</fc>")
                              , ("ru" , "<fc=#ff0000>ru</fc>")
                              ]
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %cpu%  %memory%  %enp6s0% }\
                    \{ %uname%  %date%  %kbd% "
       }
